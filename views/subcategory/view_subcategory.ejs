                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">Table</h5>

                                        <a href="/subcategory/add" class="btn btn-success">Add</a>
                                    </div>
                                </div>

                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Country</th>
                                            <th scope="col">State</th>
                                            <th scope="col">Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% subcategory.map((sub,i) =>{%>
                                        <tr>
                                            <td>
                                                <%= ++i %>
                                            </td>
                                            <td>
                                                <%= sub.categoryId.category %>
                                            </td>
                                            <td>
                                                <%= sub.subcategory %>
                                            </td>
                                            <th scope="row">
                                                <a href="/subcategory/statusChange?status=<%= sub.status%>&statusid=<%= sub.id %>"
                                                 class="btn text-white <%if (sub.status == 'active'){%> btn-success<%}else{%> btn-danger<%}%>"><%=sub.status %></a>
                                            </th>
                                            <th scope="row">
                                               <a href="/subcategory/deletSubCatagory?deleteId=<%= sub.id %>" class="btn bg-danger text-white">Delete</a>
                                               <a href="/subcategory/editSubCatagory?subeditid=<%= sub.id %> " class="btn bg-info text-white">Edit</a>
                                            </th>

                                        </tr>
                                      <%})%>
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
